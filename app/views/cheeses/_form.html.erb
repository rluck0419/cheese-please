<div><h3><%= form_title %></h3></div>

<div>
  <% if cheese.errors.any? %>
    <% cheese.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for(cheese) do |f| %>
    <div>
      <label for="name">Name: </label>
      <%= f.text_area :name, placeholder: "Mozzarella", class: 'form-field' %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
